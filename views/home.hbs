<h1>Library Home</h1>

<div class="signout-link">
  <a href="/signout">Sign Out</a>
</div>

<div class="home-container">
  <div class="books-container">
    <h3>Books available today:</h3>
    <form>
      {{#each books}}
        <label>
          <input
            class="checkbox"
            type="checkbox"
            name="books"
            value="{{this}}"
          />
          {{this}}
        </label><br />
      {{/each}}
      <button type="submit">Borrow</button>
    </form>
  </div>

  <div class="user-info">
    <p>Username: <strong> {{user}}</strong></p>
  </div>

</div>